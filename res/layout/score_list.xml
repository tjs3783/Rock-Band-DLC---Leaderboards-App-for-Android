<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="6dip">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/instrument_icon_wrapper"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:layout_marginRight="5px">
    	<ImageView
    		android:id="@+id/instrument_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerInParent="true" />
	</RelativeLayout>
	<TextView
		android:id="@+id/player_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="1px"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@id/instrument_icon_wrapper" />
 	<TextView
    	android:id="@+id/song_score"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dip"
    	android:layout_below="@id/player_name"
    	android:layout_toRightOf="@id/instrument_icon_wrapper" />
    <TextView
    	android:id="@+id/song_stars"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dip"
    	android:layout_marginLeft="1px"
    	android:layout_below="@id/song_score"
    	android:layout_toRightOf="@id/instrument_icon_wrapper"
    	android:textColor="#FFCC00" />
    <TextView
    	android:id="@+id/artist_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_alignParentRight="true" />
    <TextView
    	android:id="@+id/song_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dip"
    	android:layout_alignParentRight="true"
    	android:layout_below="@id/artist_name" />
 	<ImageView
 		android:id="@+id/song_difficulty"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dip"
    	android:layout_below="@id/song_name"
    	android:layout_alignParentRight="true" />
</RelativeLayout>